import math
from collections import Counter

print('Vvod: ', '1)vruchnyu ', '2) iz file', ' ', sep='\n')

if int(input()) == 1:
    slovo = input('tak vvodi! .\/. ')
else:
    f = open(input('chto za fail?  '))
    slovo = f.read()
    
def uniq(i):
    return list(Counter(i).values())

def entropy(i):
    return -sum([e/len(i)*math.log2(e/len(i)) for e in uniq(i)])

print('itog takoi, esli ne tak - vinovat tot kto pridumal eto...         ',entropy(slovo))
